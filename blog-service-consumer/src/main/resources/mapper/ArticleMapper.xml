<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.keovi.blog.service.consumer.mapper.ArticleMapper">
    <resultMap id="BaseResultMap" type="cn.keovi.crm.po.Article">
        <!--@mbg.generated-->
        <!--@Table article-->
        <id column="id" jdbcType="BIGINT" property="id"/>
        <result column="title" jdbcType="VARCHAR" property="title"/>
        <result column="content" jdbcType="LONGVARCHAR" property="content"/>
        <result column="category_id" jdbcType="INTEGER" property="categoryId"/>
        <result column="views" jdbcType="INTEGER" property="views"/>
        <result column="status" jdbcType="INTEGER" property="status"/>
        <result column="is_delete" jdbcType="INTEGER" property="isDelete"/>
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime"/>
        <result column="last_update_time" jdbcType="TIMESTAMP" property="lastUpdateTime"/>
        <result column="create_by" jdbcType="BIGINT" property="createBy"/>
        <result column="last_update_by" jdbcType="BIGINT" property="lastUpdateBy"/>
        <result column="top" jdbcType="INTEGER" property="top"/>
        <result column="comment_enabled" jdbcType="INTEGER" property="commentEnabled"/>
        <result column="appreciation" jdbcType="INTEGER" property="appreciation"/>
    </resultMap>
    <sql id="Base_Column_List">
        <!--@mbg.generated-->
        id, title, content, category_id, views, `status`, is_delete,
        create_time, last_update_time, create_by, last_update_by,top,commentEnabled,appreciation
    </sql>


    <select id="pageList" resultType="cn.keovi.crm.po.Article">
        select id                as id,
               ifnull(title, "") as title,
               `status`          as status,
               create_time       as createTime,
               last_update_time  as lastUpdateTime,
               category_id       as categoryId
        from article
                where is_delete = 0
        <if test="keyword != null and keyword != ''">
            and title like CONCAT('%', #{keyword}, '%')
        </if>
        <if test="status != null">
            and status = #{status}
        </if>
        <if test="id != null">
            and create_by = #{id}
        </if>
        order by create_time desc
                limit #{startIndex}, #{pageSize}
    </select>

    <select id="pageListCount" resultType="long">
        select count(1)
        from article
                where is_delete = 0
        <if test="keyword != null and keyword != ''">
            and (title like CONCAT('%', #{keyword}, '%') or
                 create_by like CONCAT('%', #{keyword}, '%'))
        </if>
        <if test="status != null">
            and status = #{status}
        </if>
        <if test="id != null">
            and create_by = #{id}
        </if>
    </select>

    <select id="statisticalBlogByMonth" resultType="java.util.Map">
        select concat(year(create_time),'-',month(create_time)) as time,count(id) as count from article
         where is_delete=0 and status=1 group by time
    </select>
</mapper>