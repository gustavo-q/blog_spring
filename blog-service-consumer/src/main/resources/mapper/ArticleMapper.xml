<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.keovi.blog.service.consumer.mapper.ArticleMapper">
    <resultMap id="BaseResultMap" type="cn.keovi.crm.po.Article">
        <!--@mbg.generated-->
        <!--@Table article-->
        <id column="id" jdbcType="BIGINT" property="id"/>
        <result column="title" jdbcType="VARCHAR" property="title"/>
        <result column="brief_content" jdbcType="LONGVARCHAR" property="briefContent"/>
        <result column="content" jdbcType="LONGVARCHAR" property="content"/>
        <result column="category_id" jdbcType="INTEGER" property="categoryId"/>
        <result column="views" jdbcType="INTEGER" property="views"/>
        <result column="cover_image" jdbcType="VARCHAR" property="coverImage"/>
        <result column="status" jdbcType="INTEGER" property="status"/>
        <result column="is_delete" jdbcType="INTEGER" property="isDelete"/>
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime"/>
        <result column="last_update_time" jdbcType="TIMESTAMP" property="lastUpdateTime"/>
        <result column="create_by" jdbcType="BIGINT" property="createBy"/>
        <result column="last_update_by" jdbcType="BIGINT" property="lastUpdateBy"/>
    </resultMap>
    <sql id="Base_Column_List">
        <!--@mbg.generated-->
        id, title, brief_content, content, category_id, views, cover_image, `status`, is_delete,
        create_time, last_update_time, create_by, last_update_by
    </sql>


    <select id="pageList" resultMap="BaseResultMap">
           select id                             as id,
               ifnull(title, "")            as title,
               ifnull(status, "")           as status,
               ifnull(create_time, null)      as createTime,
                ifnull(create_by, null)      as createBy,
               ifnull(last_update_time, null) as lastUpdateTime,
               ifnull(last_update_by, "")     as lastUpdateBy
        from `user`
        where is_delete = 0
        <if test="keyword != null and keyword != ''">
            and (title like CONCAT('%',#{keyword},'%') or
            create_by like CONCAT('%',#{keyword},'%'))
        </if>
        order by role_id asc, create_time desc
                limit #{startIndex}, #{pageSize}
    </select>

</mapper>